<?xml version='1.0' encoding='utf-8'?>
<widget id="mx.mixen.dexe" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
	<name>Dexe Desarrolladora</name>
	<description>Aplicación para la gestión de datos de los clientes.</description>
	<author email="hola@mixen.mx" href="http://mixen.mx">Mixen</author>
	<content src="index.html" />
	<plugin name="org.apache.cordova.inappbrowser" />
	<plugin name="cordova-plugin-whitelist" />
	<plugin name="cordova-plugin-splashscreen" />
	<plugin name="cordova-plugin-statusbar" />
	<preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#303030" />
	<preference name="stay-in-webview" value="false" />
	<preference name="StatusBarOverlaysWebView" value="false" />
	<allow-navigation href="http*://*.mixen.mx/web/dexe-app/*" />
	<allow-navigation href="http*://*.mixen.mx/web/dexe/*" />
	<allow-navigation href="*" />
	<access launch-external="yes" origin="tel:*" />
	<access launch-external="yes" origin="geo:*" />
	<access launch-external="yes" origin="mailto:*" />
	<access launch-external="yes" origin="sms:*" />
	<access launch-external="yes" origin="market:*" />
	<access origin="*" />
	<icon src="www/img/icons/icon.png" />
	<icon platform="android" qualifier="ldpi" src="www/img/icons/icon-36.png" />
	<icon platform="android" qualifier="mdpi" src="www/img/icons/icon-48.png" />
	<icon platform="android" qualifier="hdpi" src="www/img/icons/icon-72.png" />
	<icon platform="android" qualifier="xhdpi" src="www/img/icons/icon-96.png" />
	<icon height="57" platform="ios" src="www/img/icons/icon-57.png" width="57" />
	<icon height="72" platform="ios" src="www/img/icons/icon-72.png" width="72" />
	<icon height="114" platform="ios" src="www/img/icons/icon-114.png" width="114" />
	<icon height="120" platform="ios" src="www/img/icons/icon-120.png" width="120" />
	<icon height="144" platform="ios" src="www/img/icons/icon-144.png" width="144" />
	<icon platform="webos" src="www/img/icons/icon-64.png" />
	<icon platform="winphone" src="www/img/icons/icon-48.png" />
	<icon platform="winphone" role="background" src="www/img/icons/icon-173.png" />
	<splash src="www/img/splash/default.png" platform="ios" width="320" height="480" />
	<splash src="www/img/splash/default2x.png" platform="ios" width="640" height="960" />
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<splash src="www/img/splash/568h.png" platform="ios" width="640" height="1136" />
	<!-- iPhone 6 -->
	<splash src="www/img/splash/667h.png" platform="ios" width="750" height="1334" />
	<splash src="www/img/splash/portrait736h.png" platform="ios" width="1242" height="2208" />
	<splash src="www/img/splash/landscape736h.png" platform="ios" width="2208" height="1242" />
	<!-- iPad -->
	<splash src="www/img/splash/portrait.png" platform="ios" width="768" height="1024" />
	<splash src="www/img/splash/landscape.png" platform="ios" width="1024" height="768" />
	<!-- Retina iPad -->
	<splash src="www/img/splash/portrait2x.png" platform="ios" width="1536" height="2048" />
	<splash src="www/img/splash/landscape2x.png" platform="ios" width="2048" height="1536" />
	<platform name="android">
		<allow-intent href="market:*" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>
	<feature name="Geolocation">
		<param name="ios-package" value="CDVLocation" />
	</feature>
</widget>
