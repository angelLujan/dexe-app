<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="mx.mixen.dexe" version="1.0.0">
	<name>Dexe</name>
	<description>Aplicación para la gestión de datos de los clientes.</description>
	<author href="http://phonegap.com" email="support@phonegap.com">PhoneGap Team</author>
	<content src="index.html"/>
	<plugin name="org.apache.cordova.inappbrowser"/>
	<plugin name="cordova-plugin-whitelist"/>
	<preference name="stay-in-webview" value="false"/>
	<allow-navigation href="http*://*.mixen.mx/web/dexe-app/*"/>
	<allow-navigation href="http*://*.mixen.mx/web/dexe/*"/>
	<access origin="tel:*" launch-external="yes"/>
	<access origin="geo:*" launch-external="yes"/>
	<access origin="mailto:*" launch-external="yes"/>
	<access origin="sms:*" launch-external="yes"/>
	<access origin="market:*" launch-external="yes"/>
	<icon src="www/img/icons/icon.png" />
	<icon src="www/img/icons/icon-36.png" platform="android" qualifier="ldpi" />
	<icon src="www/img/icons/icon-48.png" platform="android" qualifier="mdpi" />
	<icon src="www/img/icons/icon-72.png" platform="android" qualifier="hdpi" />
	<icon src="www/img/icons/icon-96.png" platform="android" qualifier="xhdpi" />
	<icon src="www/img/icons/icon-80.png" platform="blackberry" />
	<icon src="www/img/icons/icon-80.png" platform="blackberry" state="hover" />
	<icon src="www/img/icons/icon-57.png" platform="ios" width="57" height="57" />
	<icon src="www/img/icons/icon-72.png" platform="ios" width="72" height="72" />
	<icon src="www/img/icons/icon-57.png" platform="ios" width="114" height="114" />
	<icon src="www/img/icons/icon-72.png" platform="ios" width="144" height="144" />
	<icon src="www/img/icons/icon-64.png" platform="webos" />
	<icon src="www/img/icons/icon-48.png" platform="winphone" />
	<icon src="www/img/icons/icon-173.png" platform="winphone" role="background" />
	<platform name="android">
		<allow-intent href="market:*"/>
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*"/>
		<allow-intent href="itms-apps:*"/>
	</platform>
</widget>